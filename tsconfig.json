{
  "compilerOptions": {
    "strict": true,
      "jsx": "react-jsx",
      "declaration": true,
      "esModuleInterop": true,
      "outDir": "dist",
      "target": "es6",
      "module": "es6",
      "moduleResolution": "node",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
  },
  "include": [
    "src/components"
  ],
  "exclude": [
    "node_modules",
  ]
  }